<script>
    function loadNhomThucAnPV() {
        var idnta = $('#nhomTA').val();
        var idb = $('#IDB').val();
        $.ajax({
            type: "post",
            url: "/loadNhomThucAnPV",
            data: "&idnta=" + idnta + "&idb=" + idb,
            success: function (result) {
                $('#tbodyNTAPV').replaceWith(result);


            },
            error: function () {
                alert("Fail");
            }
        });
    }
    $(function () {
