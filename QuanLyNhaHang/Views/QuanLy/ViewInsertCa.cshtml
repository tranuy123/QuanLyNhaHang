@model QuanLyNhaHang.Models.Ca
@{
    QuanLyNhaHangContext context = new QuanLyNhaHangContext();
    List<Sanh> getListSanh()
    {
        return context.Sanh.Where(x => x.Active == true).OrderByDescending(x => x.Idsanh).ToList();
    }
}

<div class="card">
    <div class="card-body">
        <form action="/QuanLy/InsertCa" method="post" onsubmit="themCa(event)">
            <div class="forms-header text-center">
                <h4 class="forms-title "><b>Thêm ca</b></h4>
            </div>
            <div class="forms-body">
                <div class="form-group">
                    <label style="margin:7px 0;">Mã ca</label>
                    <input asp-for="@Model.MaCa" type="text" class="form-control" required>
                </div>
                <div class="form-group">
                    <label style="margin:7px 0;">Tên ca</label>
                    <input asp-for="@Model.TenCa" type="text" class="form-control" required>
                </div>
                <div>
                    <label style="margin:7px 0;">Thứ</label>
                    <select required class="custom-select" asp-for="@Model.Thu" aria-label="Default select example">
                        <option value="" selected disabled> --Thứ--</option>



                        <option value="Monday">Monday</option>
                        <option value="Tuesday">Tuesday</option>
                        <option value="Wednesday">Wednesday</option>
                        <option value="Thursday">Thursday</option>
                        <option value="Friday">Friday</option>
                        <option value="Saturday">Saturday</option>
                        <option value="Sunday">Sunday</option>



                     
                    </select>
                </div>
                <div class="form-group">
                    <label style="margin:7px 0;">Thời gian bắt đầu</label>
                    <input asp-for="@Model.TgbatDau" type="time" class="form-control" required id="timeBD">
                </div>
                <div class="form-group">
                    <label style="margin:7px 0;">Thời gian kết thúc</label>
                    <input asp-for="@Model.TgketThuc" type="time" class="form-control" required id="timeKT">
                </div>

                <div class="row justify-content-between">
                    <div class="col-sm-2 col-form-label">
                        <button class="btn btn-secondary" type="button" onclick="window.history.go(-1);"> Quay lại</button>
                    </div>
                    <div class="col-sm-auto col-form-label b">
                        <input type="submit" class="btn btn-primary" value="Thêm">
                    </div>

                </div>
            </div>

            
            
        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        // Kích hoạt timepicker cho input với class "timepicker"
        $('#NgayNhap').datetimepicker({
            locale: 'vi',
            useStrict: true,
            format: "DD-MM-yyyy HH:mm",
            icons: {
                date: "bi bi-calendar2-date",
                up: "bi bi-chevron-up",
                down: "bi bi-chevron-down",
                previous: 'bi bi-chevron-left',
                next: 'bi bi-chevron-right',
                time: "bi bi-clock"
            }
        });

    });

    function themCa(event) {
        console.log();  
        if(document.getElementById('timeBD').value > document.getElementById('timeKT').value){
            event.preventDefault(); // Ngăn chặn sự kiện gửi form
            return false;
        }
    }
</script>