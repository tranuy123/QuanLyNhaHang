@{
    QuanLyNhaHangContext context = new QuanLyNhaHangContext();
    
    Sanh getSanh(int? id)
    {
        return context.Sanh.Find(id);
    }
}



        <div class="table-responsive" style="white-space:nowrap;overflow-y: auto;">
            

            <table id="example" class="table table-striped  table-hover text-center display nowrap" style="width:100%;">
                <thead>
                    <tr>

                        <th class="text-center">Mã Khu</th>
                        <th class="text-center">Tên Khu</th>
                        <th class="text-center">Tên Sảnh</th>


                        <th class="text-center">Tùy chọn</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Khu item in ViewBag.NSX)
                    {


                        <tr >

                            <td >@item.MaKhu</td>
                            @if(item.Active==true){
                                
                                 <td >@item.TenKhu</td>
                            }else{
                                <td >@item.TenKhu</td>
                            }
                            
                            <td>@getSanh(@item.Idsanh).TenSanh</td>


                            <td>
                                @if(item.Active ==true){
                                    <a class="chinhsua" href="/QuanLy/ViewUpdateKhu/@item.Idkhu">
                                        <i class="fa-regular fa-pen-to-square"></i>
                                    </a>

                                    <a href="/QuanLy/deleteKhu/@item.Idkhu" onclick="return confirm('Bạn có muốn xóa khu này?')">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </a>
                                }else{
                                    <a class="chinhsua" href="/QuanLy/ViewUpdateKhu/@item.Idkhu">
                                        <i class="fa-regular fa-pen-to-square"></i>
                                    </a>

                                    <a href="/QuanLy/KhoiPhucKhu/@item.Idkhu" onclick="return confirm('Bạn có muốn khôi phục khu này?')">
                                        <i class="fa-solid fa-arrow-rotate-left"></i>
                                    </a>
                                }
                                

                            </td>
                        </tr>
                    }



                </tbody>
            </table>
        </div>
         <script>
       $(document).ready(function () {
            $.fn.DataTable.ext.pager.numbers_length = 5;
            $("#example").dataTable({

                bLengthChange: false,
                bInfo: false,
                scrollX: true,
                language: {
                    paginate: {
                        previous: "Trước",
                        next: "Sau",
                    },
                    search: "Tìm kiếm",

                },
            });

        });
   </script>
  
