@model QuanLyNhaHang.Models.Khu
@{
    QuanLyNhaHangContext context = new QuanLyNhaHangContext();
    List<Sanh> getListSanh()
    {
        return context.Sanh.Where(x => x.Active == true).OrderByDescending(x => x.Idsanh).ToList();
    }
}

<div class="card">
    <div class="card-body">
        <form action="/QuanLy/InsertKhu" method="post">
            <div class="forms-header text-center">
                <h4 class="forms-title "><b>Thêm Khu</b></h4>
            </div>
            <div class="forms-body">
                <div class="form-group">
                    <label style="margin:7px 0;">Mã khu</label>
                    <input asp-for="@Model.MaKhu" type="text" class="form-control" required>
                </div>
                <div class="form-group">
                    <label style="margin:7px 0;">Tên khu</label>
                    <input asp-for="@Model.TenKhu" type="text" class="form-control" required>
                </div>

                <div>
                    <label style="margin:7px 0;">Sảnh</label>
                    <select required class="form-select" asp-for="@Model.Idsanh" aria-label="Default select example">
                        <option value="" selected disabled> --Sảnh--</option>

                        @foreach (Sanh item in getListSanh())
                        {

                            <option value="@item.Idsanh">@item.TenSanh</option>
                        }
                    </select>
                </div>
                <div class="row justify-content-between">
                    <div class="col-sm-2 col-form-label">
                        <button class="btn btn-secondary" type="button" onclick="window.history.go(-1);"> Quay lại</button>
                    </div>
                    <div class="col-sm-auto col-form-label b">
                        <input type="submit" class="btn btn-primary" value="Thêm">
                    </div>

                </div>


            </div>
            

        </form>

    </div>
</div>
<script src="~/jschinh/khu.js" defer></script>