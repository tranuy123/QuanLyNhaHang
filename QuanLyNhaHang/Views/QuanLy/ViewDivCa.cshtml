@{
    QuanLyNhaHangContext context = new QuanLyNhaHangContext();
    List<Ca> getListCa()
    {
        return context.Ca.Where(x => x.Active == true).OrderBy(x => x.Thu).ToList();
    }
    Sanh getSanh(int? id)
    {
        return context.Sanh.Find(id);
    }
}



        <div class="table-responsive" style="white-space:nowrap;overflow-y: auto;">


            <table id="example" class="table table-striped  table-hover text-center display nowrap" style="width:100%;">
                <thead>
                    <tr>

                        <th class="text-center">Mã ca</th>
                        <th class="text-center">Tên ca</th>
                        <th class="text-center">Thứ</th>
                        <th class="text-center">Thời gian bắt đầu</th>
                        <th class="text-center">Thời gian kết thúc</th>


                        <th class="text-center">Tùy chọn</th>
                    </tr>
                </thead>
                <tbody>
            @foreach (Ca item in ViewBag.NSX)
                    {
                        if(item.Active == true){
                    <tr>

                        <td>@item.MaCa</td>
                        <td>@item.TenCa</td>
                        <td>@item.Thu</td>
                        <td>@item.TgbatDau</td>
                        <td>@item.TgketThuc</td>


                        <td>

                            <a class="chinhsua" href="/QuanLy/ViewUpdateCa/@item.Idca">
                                <i class="fa-regular fa-pen-to-square"></i>
                            </a>

                            <a href="/QuanLy/deleteCa/@item.Idca" onclick="return confirm('Bạn có muốn xóa bàn này?')">
                                <i class="fa-solid fa-trash-can"></i>
                            </a>

                        </td>
                    </tr>
                        }else{
                    <tr style="color: red">

                        <td>@item.MaCa</td>
                        <td>@item.TenCa</td>
                        <td>@item.Thu</td>
                        <td>@item.TgbatDau</td>
                        <td>@item.TgketThuc</td>


                        <td>

                            <a class="chinhsua" href="/QuanLy/ViewUpdateCa/@item.Idca">
                                <i class="fa-regular fa-pen-to-square"></i>
                            </a>

                            <a href="/QuanLy/KhoiPhucCa/@item.Idca" onclick="return confirm('Bạn có muốn khôi phục ca này?')">
                                <i class="fa-solid fa-arrow-rotate-left"></i>
                            </a>

                        </td>
                    </tr>
                        }
                       
                    
                    }



                </tbody>
            </table>
        </div>
  
