@{
    QuanLyNhaHangContext context = new QuanLyNhaHangContext();
    List<LichLamViec> getListNTA()
    {
        return context.LichLamViec.Where(x => x.Active == true).ToList();
    }
    Khu getKhu(int? id)
    {
        return context.Khu.Find(id);
    }
    NhanVien getnhanVien(int? id)
    {
        return context.NhanVien.Find(id);
    }
    Ca getca(int? id)
    {
        return context.Ca.Find(id);
    }
}


<div id="divKhu" class="card pt-3">
    <div class="card-body">
        <div style="margin-bottom: -40px; position:absolute; z-index:1; display:flex;">
            <div class="" style="width: auto;">

                <a href="/QuanLy/ViewInsertLLV" class="btn btn-primary">
                    <span>Thêm LLV mới</span>
                </a>

            </div>
            <div class="dropdown" style="margin-left: 20px">
                <select id="active" onchange="changeHH()" class="custom-select" style="width:180px">
                    <option value="true" selected>Hiện tại</option>
                    <option value="false">Tất cả</option>
                </select>
            </div>
        </div>
        <div class="table-responsive" style="white-space:nowrap;overflow-y: auto;">


            <table id="example" class="table table-striped  table-hover text-center display nowrap" style="width:100%;">
                <thead>
                    <tr>

                        <th class="text-center">Tên LLV</th>
                        <th class="text-center">Tên Khu</th>
                        <th class="text-center">Tên nhân viên</th>
                        <th class="text-center">Tên ca</th>



                        <th class="text-center">Tùy chọn</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (LichLamViec item in getListNTA())
                    {


                        <tr>

                            <td>@item.Idllv</td>
                            <td class="text-left">@getKhu(@item.Idkhu).TenKhu</td>
                            <td class="text-left">@getnhanVien(@item.Idnv).Ten</td>
                            <td class="text-left">@getca(@item.Idca).TenCa</td>



                            <td>

                                <a class="chinhsua" href="/QuanLy/ViewUpdateLLV/@item.Idllv">
                                    <i class="fa-regular fa-pen-to-square"></i>
                                </a>

                                <a href="/QuanLy/deleteLLV/@item.Idllv" onclick="return confirm('Bạn có muốn xóa lịch làm việc này?')">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>

                            </td>
                        </tr>
                    }



                </tbody>
            </table>
        </div>
    </div>

</div>
<script>
    function changeHH() {
        var active = $('#active').val();
        $.ajax({
            type: "post",
            url: "/loadViewNNV",
            data: "active=" + active,
            success: function (result) {
                $('.table-responsive').replaceWith(result);
            },
            error: function () {
                alert("Fail to delete");
            }
        });
    }
</script>