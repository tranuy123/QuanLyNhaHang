@{
    QuanLyNhaHangContext context = new QuanLyNhaHangContext();
    List<QlDanhGia> getListNTA()
    {
        return context.QlDanhGia.Where(x => x.Active == true).ToList();
    }
    NhomNhanVien getNhomnhanVien(int? id)
    {
        return context.NhomNhanVien.Find(id);
    }
}


<div id="divKhu" class="card pt-3">
    <div class="card-body">
        <div style="margin-bottom: -40px; position:absolute; z-index:1; display:flex;">
            <div class="" style="width: auto;">

                <a href="/QuanLy/ViewInsertQLDanhGia" class="btn btn-primary">
                    <span>Thêm điểm ĐG mới</span>
                </a>
                    
            </div>
            <div class="dropdown" style="margin-left: 20px">
                <select id="active" onchange="changeHH()" class="custom-select" style="width:180px">
                    <option value="true" selected>Hiện tại</option>
                    <option value="false">Tất cả</option>
                </select>
            </div>
        </div>
        <div class="table-responsive" style="white-space:nowrap;overflow-y: auto;">


            <table id="example" class="table table-striped  table-hover text-center display nowrap" style="width:100%;">
                <thead>
                    <tr>

                        <th class="text-center">Mã đánh giá</th>
                        <th class="text-center">Tên đánh giá</th>
                        <th class="text-center">Nhóm nhân viên</th>
                        <th class="text-center">Thời gian hoàn thành từ</th>
                        <th class="text-center">Thời gian hoàn thành đến</th>
                        <th class="text-center">Điểm</th>
                        <th class="text-center">Tùy chọn</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (QlDanhGia item in getListNTA())
                    {


                        <tr>

                            <td>@item.Ma</td>
                            <td class="text-left">@item.Ten</td>
                            <td class="text-left">@getNhomnhanVien(@item.Idnnv).TenNnv</td>
                            <td class="text-left">@item.ThoiGianTu</td>
                            <td class="text-left">@item.ThoiGianDen</td>
                            <td class="text-left">@item.Diem</td>

                       <td>

                                <a class="chinhsua" href="/QuanLy/ViewUpdateQLDanhGia/@item.IddanhGia">
                                    <i class="fa-regular fa-pen-to-square"></i>
                                </a>

                                <a href="/QuanLy/deleteQLDanhGia/@item.IddanhGia" onclick="return confirm('Bạn có muốn xóa lịch làm việc này?')">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>

                            </td>
                        </tr>
                    }



                </tbody>
            </table>
        </div>
    </div>

</div>
<script>
    function changeHH() {
        var active = $('#active').val();
        $.ajax({
            type: "post",
            url: "/loadViewNNV",
            data: "active=" + active,
            success: function (result) {
                $('.table-responsive').replaceWith(result);
            },
            error: function () {
                alert("Fail to delete");
            }
        });
    }
</script>