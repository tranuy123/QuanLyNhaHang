@model QuanLyNhaHang.Models.DonViTinh
@{
    QuanLyNhaHangContext context = new QuanLyNhaHangContext();

}

<div class="card">
    <div class="card-body">
        <form action="/QuanLy/UpdateDonViTinh" method="post">
            <div class="forms-header text-center">
                <h4 class="forms-title "><b>@ViewData["Title"]</b></h4>
            </div>
            <div class="forms-body">
                <div class="form-group">
                    <label style="margin:7px 0;">Mã Đơn vị tính</label>
                    <input asp-for="@Model.MaDvt" type="text" class="form-control" required>
                    <input asp-for="@Model.Iddvt" type="hidden" class="form-control" required>
                </div>
                <div class="form-group">
                    <label style="margin:7px 0;">Tên Đơn vị tính</label>
                    <input asp-for="@Model.TenDvt" type="text" class="form-control" required>
                </div>
            </div>
            <div class="forms-footer" style="justify-content:space-between">

                <input type="submit" class="btn btn-primary" value="Sửa">
            </div>
        </form>
        <button class="btn btn-secondary" onclick="window.history.go(-1);">
            Quay lại
        </button>

    </div>
</div>