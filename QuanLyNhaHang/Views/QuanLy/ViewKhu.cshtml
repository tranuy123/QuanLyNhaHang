@{
    QuanLyNhaHangContext context = new QuanLyNhaHangContext();
    List<Khu> getListKhu()
    {
        return context.Khu.Where(x => x.Active == true).OrderByDescending(x => x.Idsanh).ToList();
    }
    Sanh getSanh(int? id)
    {
        return context.Sanh.Find(id);
    }
}


<div id="divKhu" class="card pt-3">
    <div class="card-body">
        <div style="margin-bottom: -40px; position:absolute; z-index:1; display:flex;">
            <div class="" style="width: auto;">

                <a href="/QuanLy/ViewInsertKhu" class="btn btn-primary">
                    <span>Thêm khu mới</span>
                </a>

            </div>
            <div class="dropdown" style="margin-left: 20px">
                <select id="active" onchange="changeHH()" class="custom-select" style="width:180px">
                    <option value="true" selected>Hiện tại</option>
                    <option value="false">Tất cả</option>
                </select>
            </div>
        </div>
        <div class="table-responsive" style="white-space:nowrap;overflow-y: auto;">
           

            <table id="example" class="table table-striped  table-hover text-center display nowrap" style="width:100%;">
                <thead>
                    <tr>

                        <th class="text-center">Mã Khu</th>
                        <th class="text-center">Tên Khu</th>
                        <th class="text-center">Tên Sảnh</th>

                  
                        <th class="text-center">Tùy chọn</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Khu item in getListKhu())
                    {


                        <tr>

                            <td>@item.MaKhu</td>
                            <td>@item.TenKhu</td>
                            <td>@getSanh(@item.Idsanh).TenSanh</td>

                         
                            <td>

                                <a class="chinhsua" href="/QuanLy/ViewUpdateKhu/@item.Idkhu">
                                    <i class="fa-regular fa-pen-to-square"></i>
                                </a>

                                <a href="/QuanLy/deleteKhu/@item.Idkhu" onclick="return confirm('Bạn có muốn xóa khu này?')">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                                
                            </td>
                        </tr>
                    }



                </tbody>
            </table>
        </div>
    </div>

</div>
<script>
    function changeHH() {
        var active = $('#active').val();
        $.ajax({
            type: "post",
            url: "/loadViewKhu",
            data: "active=" + active,
            success: function (result) {
                $('.table-responsive').replaceWith(result);
            },
            error: function () {
                alert("Fail to delete");
            }
        });
    }
</script>