@{
    string dayToString(DateTime? a)
    {
        if (a == null)
        {
            return "";
        }
        return a.Value.ToString("dd-MM-yyyy");
    }
}

<div id="tableLichSuHD" class="table-responsive" style="white-space:nowrap;overflow-y: auto;">
    <table id="LichSuNhap" class="table table-striped table-hover text-center display nowrap" style="width:100%;max-height500px">
        <thead>
            <tr>
                <th class="text-center">Mã hóa đơn</th>
                <th class="text-center">Tên bàn</th>
                <th class="text-center">Tên khu</th>
                <th class="text-center">Tên sảnh</th>
                <th class="text-center">Thời gian xuất</th>
                <th class="text-center">tổng tiền</th>
               
                <th class="text-center">Tùy chọn</th>
            </tr>
        </thead>
        <tbody>
            @foreach (HoaDon p in ViewBag.ListPhieuNhap)
            {
                <tr>
                    <td>@p.MaHd</td>
                    <td>@p.IdbanNavigation.TenBan</td>
                    <td>@p.IdbanNavigation.IdkhuNavigation.TenKhu</td>
                    <td>@p.IdbanNavigation.IdkhuNavigation.IdsanhNavigation.TenSanh</td>
                    <td>@p.Tgxuat.Value.ToString("dd-MM-yyyy HH:mm")</td>
                    <td>@p.TongTien</td>
                    
                    <td>
                        <a href="/download/ChiTietHoaDon/@p.Idhd" class="btn btn-outline-success">In</a>
                        <button type="button" onclick="ViewPhieuNhap('@p.Idhd')" class="btn btn-outline-primary mx-1">Xem</button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <script>
        $.fn.DataTable.ext.pager.numbers_length = 5;
        $("#LichSuNhap").dataTable({
            "scrollY": "400px",
            "scrollCollapse": true,
            bLengthChange: false,
            bInfo: false,
            scrollX: true,
            fixedHeader: true,
            searching: false,
            language: {
                paginate: {
                    previous: "Trước",
                    next: "Sau",
                },
                search: "Tìm kiếm",

            },
        });
    </script>
</div>