@{
    string dayToString(DateTime? a)
    {
        if (a == null)
        {
            return "";
        }
        return a.Value.ToString("dd-MM-yyyy");
    }
    string toDecimal(double? d)
    {
        return d.Value.ToString("#,##0.00");
    }
}

