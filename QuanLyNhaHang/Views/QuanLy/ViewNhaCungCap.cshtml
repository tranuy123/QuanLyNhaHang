@{
    QuanLyNhaHangContext context = new QuanLyNhaHangContext();
    List<NhaCungCap> getListNhaCungCap()
    {
        return context.NhaCungCap.Where(x => x.Active == true).OrderByDescending(x => x.Idncc).ToList();
    }
    Sanh getSanh(int? id)
    {
        return context.Sanh.Find(id);
    }
}


<div id="divNhaCungCap" class="card pt-3">
    <div class="card-body">
        <div style="margin-bottom: -40px; position:absolute; z-index:1; display:flex;">
            <div class="" style="width: auto;">

                <a href="/QuanLy/ViewInsertNhaCungCap" class="btn btn-primary">
                    <span>Thêm NhaCungCap mới</span>
                </a>

            </div>
            <div class="dropdown" style="margin-left: 20px">
                <select id="active" onchange="changeHH()" class="custom-select" style="width:180px">
                    <option value="true" selected>Hiện tại</option>
                    <option value="false">Tất cả</option>
                </select>
            </div>
        </div>
        <div class="table-responsive" style="white-space:nowrap;overflow-y: auto;">


            <table id="example" class="table table-striped  table-hover text-center display nowrap" style="width:100%;">
                <thead>
                    <tr>

                        <th class="text-center">Mã nhà cung cấp</th>
                        <th class="text-center">Tên nhà cung cấp</th>
                        <th class="text-center">Địa chỉ</th>
                        <th class="text-center">Điện thoại</th>
                        <th class="text-center">Mail</th>
                        <th class="text-center">Ghi chú</th>


                        <th class="text-center">Tùy chọn</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (NhaCungCap item in getListNhaCungCap())
                    {


                        <tr>

                            <td>@item.MaNcc</td>
                            <td class="text-left">@item.TenNcc</td>
                            <td class="text-left">@item.DiaChi</td>
                            <td class="text-left">@item.DienThoai</td>
                            <td class="text-left">@item.Mail</td>
                            <td class="text-left">@item.GhiChu</td>


                            <td>

                                <a class="chinhsua" href="/QuanLy/ViewUpdateNhaCungCap/@item.Idncc">
                                    <i class="fa-regular fa-pen-to-square"></i>
                                </a>

                                <a href="/QuanLy/deleteNhaCungCap/@item.Idncc" onclick="return confirm('Bạn có muốn xóa nhà cung cấp này?')">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>

                            </td>
                        </tr>
                    }



                </tbody>
            </table>
        </div>
    </div>

</div>
<script>
    function changeHH() {
        var active = $('#active').val();
        $.ajax({
            type: "post",
            url: "/loadViewNhaCungCap",
            data: "active=" + active,
            success: function (result) {
                $('.table-responsive').replaceWith(result);
            },
            error: function () {
                alert("Fail to delete");
            }
        });
    }
</script>