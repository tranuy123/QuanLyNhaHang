@model QuanLyNhaHang.Models.HangHoa
@{
    QuanLyNhaHangContext context = new QuanLyNhaHangContext();
    List<NhomHangHoa> getListNHH()
    {
        return context.NhomHangHoa.Where(x => x.Active == true).OrderByDescending(x => x.Idnhh).ToList();
    }
    List<DonViTinh> getListDVT()
    {
        return context.DonViTinh.Where(x => x.Active == true).OrderByDescending(x => x.Iddvt).ToList();
    }
}

<div class="card">
    <div class="card-body">
        <form action="/QuanLy/UpdateHangHoa" method="post">
            <div class="forms-header text-center">
                <h4 class="forms-title "><b>@ViewData["Title"]</b></h4>
            </div>
            <div class="forms-body">
                <div class="form-group">
                    <label style="margin:7px 0;">Mã hàng hóa</label>
                    <input asp-for="@Model.MaHh" type="text" class="form-control" required>
                    <input asp-for="@Model.Idhh" type="hidden" class="form-control" required>
                </div>
                <div class="form-group">
                    <label style="margin:7px 0;">Tên hàng hóa</label>
                    <input asp-for="@Model.TenHh" type="text" class="form-control" required>
                </div>
                <div class="form-group">
                    <label style="margin:7px 0;">Giá bán</label>
                    <input asp-for="@Model.GiaBan" type="text" class="form-control" required>
                </div>
                <div @* class="form-group" *@>
                    <label style="margin:7px 0;">Hàng hóa đếm được</label>
                    <input asp-for="@Model.HangDemDuoc" type="checkbox">
                </div>

                <div>
                    <label style="margin:7px 0;">Nhóm hàng hóa</label>
                    <select required class="form-select" asp-for="@Model.Idnhh" aria-label="Default select example">
                        <option value="" disabled> --nhóm hàng hóa--</option>

                        @foreach (NhomHangHoa item in getListNHH())
                        {

                            <option value="@item.Idnhh">@item.TenNhh</option>
                        }
                    </select>
                </div>
                <div>
                    <label style="margin:7px 0;">Sảnh</label>
                    <select required class="form-select" asp-for="@Model.Iddvt" aria-label="Default select example">
                        <option value="" disabled> --Đơn vị tính--</option>

                        @foreach (DonViTinh item in getListDVT())
                        {

                            <option value="@item.Iddvt">@item.TenDvt</option>
                        }
                    </select>
                </div>

                <div class="row justify-content-between">
                    <div class="col-sm-2 col-form-label">
                        <button class="btn btn-secondary" type="button" onclick="window.history.go(-1);"> Quay lại</button>
                    </div>
                    <div class="col-sm-auto col-form-label b">
                        <input type="submit" class="btn btn-primary" value="Sửa">
                    </div>

                </div>

            </div>
           
        </form>


    </div>
</div>