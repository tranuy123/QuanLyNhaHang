@model List<HoaDon>
@{
    Layout = null;
    QuanLyNhaHangContext context = new QuanLyNhaHangContext();
    string toDecimal(double? d)
    {
        return d.Value.ToString("#,##0");
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />

    <title>VTYT</title>
    <meta content="" name="description" />
    <meta content="" name="keywords" />

    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon" />
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon" />

    <!-- Fonts -->
    <link rel="stylesheet" href="~/assets/fonts/fonts.css" />

    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" />
    <link href="~/assets/vendor/quill/quill.snow.css" rel="stylesheet" />
    <link href="~/assets/vendor/quill/quill.bubble.css" rel="stylesheet" />
    <link href="~/assets/vendor/remixicon/remixicon.css" rel="stylesheet" />

    <link href="~/assets/vendor/simple-datatables/style.css" rel="stylesheet" />

    <link rel="stylesheet" type="text/css" href="~/datatables.min.css" />

    <!-- Template Main CSS File -->
    <link href="~/bootstrap-datetimepicker.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/css/Modalcss.css" type="text/css" />
    <link href="~/assets/css/style.css" rel="stylesheet" />

    <script src="~/jquery-3.6.1.min.js"></script>

    <script src="~/umd/popper.min.js"></script>
    <script src="~/moment.js/moment.min.js"></script>
    <script src="~/bootstrap-datetimepicker.min.js"></script>
    <script src="/select/js/selectize.min.js"></script>
    <link rel="stylesheet" href="~/select/css/selectize.bootstrap4.min.css" />
</head>
<body style="background-color:white">
    <section class="section" style="background-color: white">
        <div class="card p-0" style="box-shadow: none">
            <div class="card-body">
                <header class="d-flex justify-content-between mb-4"
                        style="border-bottom: double; font-size: larger">
                    <div class="infor-DN d-flex col-sm-8 col-lg-8">
                        <img src="/assets/img/logo.png"
                             alt=""
                             style="height: 120px; width: 120px" />

                        <div class="infomation col-sm-9" style="margin-left: 40px">
                            <div class="row mb-1">
                                <label class="col-lg-12 col-form-label p-0"
                                       style="text-transform: uppercase;font-size:larger;"><b>Nhà Hàng Trần Uy</b></label>
                            </div>
                            <div class="row">
                                <label class="col-lg-12 col-form-label p-0">Địa chỉ: Lạc Long Quan</label>
                            </div>
                            <div class="row justify-content-between">
                                <label class="col-lg-5 col-form-label p-0">SĐT: 0909090909</label>
                                <label class="col-lg-6 col-form-label p-0">Email: Votranuy2001@gmail.com</label>
                            </div>
                            <div class="row justify-content-between">
                                <label class="col-lg-5 col-form-label p-0">MST: MST896756</label>
                                <label class="col-lg-6 col-form-label p-0">Số TK: 0571000067168 </label>
                            </div>
                            <div class="row justify-content-between">
                                <label class="col-lg-5 col-form-label p-0">Ngân hàng: Vietcombank</label>
                                <label class="col-lg-6 col-form-label p-0">Chủ TK: Võ Trần Uy</label>
                            </div>
                        </div>

                    </div>
                    <div class="note-name d-flex justify-content-center flex-column col-sm-3 col-lg-3">
                        <h4 class="text-center" style="color: black">
                            <b>BÁO CÁO</b>
                        </h4>
                        <h4 class="text-center" style="color: black">
                            <b>Doanh thu</b>
                        </h4>
                        <div class="row justify-content-between">
                            <label class="col-lg-6 col-form-label p-0">Từ: @ViewBag.tungay</label>
                            <label class="col-lg-6 col-form-label p-0">Đến: @ViewBag.denngay</label>
                        </div>
                    </div>
                </header>
                <article>

                    <div>
                        <table id="tableChiTietPhieuNhap"
                               class="table table-striped table-hover text-center display nowrap"
                               style="width: 100%">
                            <thead>
                                <tr>
                                    <th class="text-center">Ngày tạo</th>
                                    <th class="text-center">Số hóa đơn</th>
                                    <th class="text-center">Tên sảnh</th>
                                    <th class="text-center">Tên khu</th>
                                    <th class="text-center">Tên bàn</th>
                                    <th class="text-center">∑ Tiền</th>
                               
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    double tongTH = 0;
                                    double tongThanhToan = 0;
                                }
                                @foreach (HoaDon pn in Model)
                                {
                                    <tr>
                                        @{
                                            var ListCTPNT = pn.ChiTietHoaDon.ToList();
                                            var TienHang = Math.Round(ListCTPNT.Sum(x => x.Sl * x.DonGia).Value, 2);
                                            tongTH += TienHang;
                                        }
                                        <td class="text-center">@pn.Tgxuat.Value.ToString("dd-MM-yy")</td>
                                        <td class="text-center">@pn.MaHd</td>
                                        <td class="text-start">@pn.IdbanNavigation.IdkhuNavigation.IdsanhNavigation.TenSanh</td>
                                        <td class="text-start">@pn.IdbanNavigation.IdkhuNavigation.TenKhu</td>
                                        <td class="text-start">@pn.IdbanNavigation.TenBan</td>


                                        <td class="text-end">@toDecimal(TienHang)</td>
                                 
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr style="background-color:lightgray">
                                    <td colspan="5"><b>Tổng:</b></td>
                                    <td class="text-end">@toDecimal(tongTH)</td>
                                    <td class="text-end">@toDecimal(tongThanhToan)</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                   
                </article>
            </div>
        </div>
    </section>
</body>
</html>