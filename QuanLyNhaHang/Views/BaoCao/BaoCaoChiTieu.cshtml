<!DOCTYPE html>
<head>
    <title>Biểu đồ Bar Chart với nhiều dataset</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="row">
        <label class="col-sm-1 col-lg-1 col-form-label">Từ ngày</label>
        <div class="col-sm-2 col-lg-2">
            <input type="text" name="tuNgay" class="form-control" value="@DateTime.Now.ToString("dd-MM-yyyy")" placeholder="dd-MM-yyyy" id="tuNgay">
        </div>
        <label class="col-sm-1 col-lg-1 col-form-label">Đến ngày</label>
        <div class="col-sm-2 col-lg-2">
            <input type="text" name="denNgay" class="form-control" value="@DateTime.Now.ToString("dd-MM-yyyy")" placeholder="dd-MM-yyyy" id="denNgay">
        </div>
        <div class="col-md-1 mb-2 col-lg-1 d-flex justify-content-end">
            <button type="button" class="btn btn-primary" onclick="baoCaoChiTieu()">
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>
        </div>
    </div>


    <div class="col-md-16 mb-12">
        <div class="card shadow">
            <div class="card-body">
                <ul class="nav nav-tabs mb-3" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Dạng biểu đồ (Món ăn)</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Dạng bảng (Món ăn)</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Dạng biểu đồ (Khu)</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact1" role="tab" aria-controls="contact1" aria-selected="false">Dạng bảng (Khu)</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade active show" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div style="width: 80%; margin: auto;">
                            <canvas id="doThiThucDon"></canvas>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        <table class="table table-bordered table-hover table-striped text-center" id="tableChiTietPhieuNhap">
                            <thead style="position: sticky; top: 0;">
                                <tr>
                                    <th>STT</th>
                                    <th>Tên món</th>
                                    <th>Số lượng</th>
                                </tr>
                            </thead>
                            <tbody id="tbodyTD">
                            </tbody>
                            <tfoot>
                                <tr id="tongTien">
                                    <td></td>
                                    <td>Tổng</td>
                                    <td><input type="text" readonly class="form-control formatted-number" id="tongTD" value="" /></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                        <div style="width: 80%; margin: auto;">
                            <canvas id="doThiKhu"></canvas>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="contact1" role="tabpanel" aria-labelledby="contact1-tab">
                        <table class="table table-bordered table-hover table-striped text-center" id="tableChiTietPhieuNhap">
                            <thead style="position: sticky; top: 0;">
                                <tr>
                                    <th>STT</th>
                                    <th>Tên khu</th>
                                    <th>Doanh thu</th>
                                </tr>
                            </thead>
                            <tbody id="tbodyK">
                            </tbody>
                            <tfoot>
                                <tr id="tongTien">
                                    <td></td>
                                    <td>Tổng</td>
                                    <td><input type="text" readonly class="form-control formatted-number" id="tongK" value="" /></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="~/jschinh/BaoCaoChiTieu.js"></script>