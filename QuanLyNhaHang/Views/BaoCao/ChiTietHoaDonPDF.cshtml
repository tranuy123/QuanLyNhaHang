                                <tr>
                                    <th class="text-center">TT</th>
                                    <th class="text-center">Mã món ăn</th>
                                    <th class="text-center">Tên món</th>
                                    <th class="text-center">SL</th>
                                    <th class="text-center">Đơn giá</th>
                                    <th class="text-center">Tỷ lệ giảm</th>
