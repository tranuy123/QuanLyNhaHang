@model QuanLyNhaHang.Models.HoaDon
@{
    Layout = null;
    QuanLyNhaHangContext context = new QuanLyNhaHangContext();
    var ListCTHD = Model.ChiTietHoaDon.ToList();
    var TienHang = ListCTHD.Sum(x => x.Sl * x.DonGia);
    ThucDon getHH(int? id)
    {

        return context.ThucDon.Find(id);
    }
    NhanVien getNV(int? id)
    {

        return context.NhanVien.Find(id);
    }
   

    string toDecimal(double? d)
    {
        return d.Value.ToString("#,##0.00");
    }
    string toDecimal2(double? d)
    {
        return d.Value.ToString("#,##0");
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />

    <title>VTYT</title>
    <meta content="" name="description" />
    <meta content="" name="keywords" />

    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon" />
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon" />

    <!-- Fonts -->
    <link rel="stylesheet" href="~/assets/fonts/fonts.css" />

    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" />
    <link href="~/assets/vendor/quill/quill.snow.css" rel="stylesheet" />
    <link href="~/assets/vendor/quill/quill.bubble.css" rel="stylesheet" />
    <link href="~/assets/vendor/remixicon/remixicon.css" rel="stylesheet" />

    <link href="~/assets/vendor/simple-datatables/style.css" rel="stylesheet" />

    <link rel="stylesheet" type="text/css" href="~/datatables.min.css" />

    <!-- Template Main CSS File -->
    <link href="~/bootstrap-datetimepicker.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/css/Modalcss.css" type="text/css" />
    <link href="~/assets/css/style.css" rel="stylesheet" />

    <script src="~/jquery-3.6.1.min.js"></script>

    <script src="~/umd/popper.min.js"></script>
    <script src="~/moment.js/moment.min.js"></script>
    <script src="~/bootstrap-datetimepicker.min.js"></script>
    <script src="/select/js/selectize.min.js"></script>
    <link rel="stylesheet" href="~/select/css/selectize.bootstrap4.min.css" />
    <link href="~/css/select2-bootstrap4.css" rel="stylesheet" />
    <link href="~/css/select2.css" rel="stylesheet" />
</head>
<body style="background-color:white">
    <section class="section" style="background-color:white;">
        <div class="card p-0" style="box-shadow:none">
            <div class="card-body">
                <header class="d-flex justify-content-between mb-2" style="border-bottom:double;font-size:larger">
                    <div class="infor-DN d-flex col-sm-9 col-lg-7">
                        <img src="/assets/img/logo.png"
                             alt=""
                             style="height: 120px; width: 120px" />

                        <div class="infomation col-sm-8" style="margin-left: 40px">
                            <div class="row mb-1">
                                <label class="col-lg-12 col-form-label p-0"
                                       style="text-transform: uppercase;font-size:larger;"><b>Nhà Hàng Trần Uy</b></label>
                            </div>
                            <div class="row">
                                <label class="col-lg-12 col-form-label p-0">Địa chỉ: 947 Lạc Long Quân</label>
                            </div>
                            <div class="row justify-content-between">
                                <label class="col-lg-5 col-form-label p-0">SĐT:09090909</label>
                            </div>
                            <div class="row">
                                <label class="col-sm-5 col-lg-2 col-form-label p-0">Số hóa đơn:</label>
                                <div class="col-sm-6 col-lg-8">
                                    <label for="" class="col-form-label p-0">@Model.MaHd</label>
                                </div>
                            </div>
                            <div class="row mb-1">
                                <label class="col-sm-5 col-lg-6 col-form-label p-0">Ngày tạo:</label>
                                <div class="col-sm-6 col-lg-6">
                                    <label for="" class="col-form-label p-0">@Model.Tgxuat.Value.ToString("dd-MM-yyyy")</label>
                                </div>
                            </div>
                            <div class="row mb-1">
                                <label class="col-sm-5 col-lg-6 col-form-label p-0">Nhân viên thu ngân:</label>
                                <div class="col-sm-6 col-lg-6">
                                    <label for="" class="col-form-label p-0">@getNV(Model.Idnv).Ten</label>
                                </div>
                            </div>
                           
                        </div>
                    </div>
                    <div class="thongtinphieu col-sm-3 col-lg-6">
                        <div class="row mb-4">
                        </div>
                       
                        
                    </div>
                </header>
                <article>
                    <h3 class="text-center" style="color: black">
                        <b>Hóa đơn thanh toán</b>
                    </h3>
                    <div class="infor-NCC" style="font-size:larger">
                       
                   
                    </div>
                    <div>
                        <table id="tableChiTietPhieuNhap"
                               class="table table-striped table-hover text-center display nowrap"
                               style="width: 100%">
                            <thead>
                                <tr>
                                    <th class="text-center">TT</th>
                                    <th class="text-center">Tên hàng</th>
                                    <th class="text-center">ĐVT</th>
                                    <th class="text-center">S.LG</th>
                                    <th class="text-center">Đơn giá</th>
                                   
                                    <th class="text-center">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int index = 0;
                                }
                                @foreach (ChiTietHoaDon ct in Model.ChiTietHoaDon)
                                {
                                    index++;
                                    var hh = getHH(ct.Idtd);
                                    <tr>
                                        <td class="text-center">@index</td>
                                        <td class="text-start">@hh.Ten</td>
                                        <td>phần</td>
                                        <td class="text-end">@toDecimal(ct.Sl)</td>
                                        <td class="text-end">@toDecimal(ct.DonGia)</td>
                                       
                                        <td class="text-end">@toDecimal2(ct.DonGia*ct.Sl) VNĐ</td>
                                    </tr>
                                }
                                <tr>
                                    <th class="text-center">Tổng</th>
                                    <th class="text-center"></th>
                                    <th class="text-center"></th>
                                    <th class="text-center"></th>
                                    <th class="text-center"></th>

                                    <th class="text-end"> @toDecimal2(TienHang) VNĐ</th>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                   
                    
                </article>
            </div>
        </div>
    </section>
    <script src="/assets/js/ajax.js"></script>
    <!-- Vendor JS Files -->
    <script src="/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
